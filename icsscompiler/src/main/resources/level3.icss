LinkColor := #ff0000;
ParWidth := 500px;
AdjustColor := TRUE;
UseLinkColor := FALSE;

p {
	background-color: #ffffff;
	width: ParWidth;
	if[AdjustColor] {
	    color: #124532;
	    if[UseLinkColor]{
	        background-color: LinkColor;
	    }
	}
}
a {
	color: LinkColor;
}

#menu {
	width: ParWidth + 20px;
}

.menu {
	color: #000000;
    background-color: LinkColor;

}
